        <ComboBox Name="ChooseManufacturerCmb" HorizontalAlignment="Left" Margin="536,314,0,0" VerticalAlignment="Top" Width="332" Height="48" SelectionChanged="ChooseManufacturerCmb_SelectionChanged"/>
        <ComboBox HorizontalAlignment="Left" Name="ChooseMaterialCmb" Margin="536,395,0,0" VerticalAlignment="Top" Width="332" Height="48"/>
        <TextBox Name="CostTB" HorizontalAlignment="Left" Height="32" Margin="327,508,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159"/>
        <TextBox Name="AmountTB" HorizontalAlignment="Left" Height="32" Margin="798,508,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159"/>
        <Button x:Name="AddUcetBtn" Content="Добавить" HorizontalAlignment="Left" Margin="580,628,0,0" VerticalAlignment="Top" Width="175" Height="41" Click="AddUcetBtn_Click"/>
